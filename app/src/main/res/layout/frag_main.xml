<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:components="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hk.amae.sampler.MainFrag"
    android:rowCount="9"
    android:columnCount="4"
    android:orientation="horizontal"
    android:id="@+id/whatever"
    android:padding="9dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/layout_lockwrapper">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggle_lock"
            android:layout_weight="0.25"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:cropToPadding="false"
            android:padding="9dp"
            android:src="@drawable/unlock"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <Spinner
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:id="@+id/spin_channel"
            android:spinnerMode="dialog"
            android:layout_gravity="center"
            android:dropDownWidth="wrap_content"
            android:layout_weight="0.15"
            android:prompt="@string/channel_prompt"
            android:paddingLeft="9dp" />

        <Spinner
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:id="@+id/spin_model"
            android:spinnerMode="dialog"
            android:layout_gravity="center"
            android:dropDownWidth="wrap_content"
            android:layout_weight="0.2"
            android:prompt="@string/model_prompt" />

        <view
            android:layout_width="0dp"
            android:layout_height="32dp"
            class="hk.amae.widget.Battery"
            android:id="@+id/view"
            components:cap="75"
            components:charging="true"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:layout_weight="0.4"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/wrap_state"
        android:weightSum="5"
        android:layout_below="@+id/layout_lockwrapper"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="299\nmL/min"
            android:id="@+id/txt_flow"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:gravity="center" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggle_run"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/play"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@null"
            android:padding="9dp"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0.99L"
                    android:id="@+id/txt_capacity"
                    android:layout_gravity="center_vertical"
                    android:gravity="center" />

            <Button
                android:text="监视器"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:id="@+id/btn_monitor"
                android:textColor="@color/amae_text_icons"
                android:singleLine="true"
                android:background="@drawable/amae_button"
                android:layout_gravity="center" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wrap_state"
        android:id="@+id/wrap_manual"
        android:visibility="gone"
        android:layout_alignParentEnd="false"
        android:layout_marginBottom="48dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/wrap_state"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1"
            android:id="@+id/linearLayout3">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="已采样"
                android:id="@+id/textView4"
                android:layout_gravity="center"
                android:layout_marginRight="9dp"
                android:textColor="@color/amae_secondary_text" />

            <hk.amae.widget.TextProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="24dp"
                android:id="@+id/prog_sampling"
                android:layout_gravity="center_vertical"
                android:progress="50"
                android:max="100"
                android:progressDrawable="@drawable/amae_progressbar"
                components:textSize="18sp"
                components:textColor="@color/amae_text_icons"
                components:text="51%"
                android:indeterminate="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1"
            android:id="@+id/layout_speed">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="设定流量"
                android:id="@+id/textView5"
                android:layout_gravity="center"
                android:layout_marginRight="9dp"
                android:textColor="@color/amae_secondary_text" />
            <hk.amae.widget.NumberOperator
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                components:delta="100"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"></hk.amae.widget.NumberOperator>

            <TextView
                android:layout_width="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="mL/min"
                android:id="@+id/textView3"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:textColor="@color/amae_secondary_text"
                android:singleLine="true"
                android:padding="0dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/layout_speed"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/layout_timing"
            android:weightSum="1"
            android:visibility="gone">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="设定时长"
                android:id="@+id/textView6"
                android:layout_gravity="center"
                android:layout_marginRight="9dp"
                android:textColor="@color/amae_secondary_text"
                android:paddingRight="9dp"
                android:layout_weight="0.3" />
            <hk.amae.widget.NumberOperator
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="9dp"
                android:layout_weight="0.5"
                components:delta="1"
                android:paddingBottom="9dp"></hk.amae.widget.NumberOperator>

            <TextView
                android:layout_width="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="  min"
                android:id="@+id/textView16"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:textColor="@color/amae_secondary_text"
                android:singleLine="true"
                android:padding="0dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/layout_speed"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/layout_capacity"
            android:weightSum="1"
            android:visibility="visible">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="设定容量"
                android:id="@+id/textView7"
                android:layout_gravity="center"
                android:layout_marginRight="9dp"
                android:textColor="@color/amae_secondary_text"
                android:paddingRight="9dp"
                android:layout_weight="0.3" />
            <hk.amae.widget.NumberOperator
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="9dp"
                android:layout_weight="0.5"
                components:delta="1"
                android:paddingBottom="9dp"></hk.amae.widget.NumberOperator>

            <TextView
                android:layout_width="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="  L"
                android:id="@+id/textView8"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:textColor="@color/amae_secondary_text"
                android:singleLine="true"
                android:padding="0dp"
                android:layout_gravity="center"
                android:gravity="start" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1"
            android:id="@+id/layout_tips"
            android:layout_below="@+id/layout_speed">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="提示信息"
                android:id="@+id/textView9"
                android:layout_below="@+id/layout_timing"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/amae_secondary_text"
                android:layout_marginRight="9dp"
                android:layout_weight="0.3" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="tips here....\nanother line"
                android:id="@+id/txt_tips"
                android:layout_below="@+id/layout_speed"
                android:layout_toRightOf="@+id/textView7"
                android:layout_toEndOf="@+id/textView7"
                android:layout_weight="0.7"
                android:textColor="@color/amae_secondary_text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/wrap_timing"
        android:layout_below="@+id/wrap_state"
        android:layout_marginBottom="48dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:text="第一组9:00启动 时长：30min 流量：500mL/min\n第二组9:30启动 时长：30min 流量：500mL/min\n第三组9:30启动 时长：30min 流量：500mL/min\n第四组9:30启动 时长：30min 流量：500mL/min\n第五组9:30启动 时长：30min 流量：500mL/min\n第六组9:30启动 时长：30min 流量：500mL/min\n第七组9:30启动 时长：30min 流量：500mL/min\n第八组9:30启动 时长：30min 流量：500mL/min\n"
            android:id="@+id/txt_timing_groups"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="8"
            android:paddingLeft="9dp"
            android:paddingRight="9dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/AmaeTextMedium"
            android:text="第一组启动倒计时 15:39:00"
            android:id="@+id/txt_countdown"
            android:padding="9dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:id="@+id/layout_actions"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="设置"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:id="@+id/btn_setting"
            android:textColor="@color/amae_text_icons"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:background="@drawable/amae_button" />

        <Button
            android:text="连接"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:id="@+id/btn_connect"
            android:textColor="@color/amae_text_icons"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:background="@drawable/amae_button" />

        <Button
            android:text="查询"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:id="@+id/btn_query"
            android:textColor="@color/amae_text_icons"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:background="@drawable/amae_button" />

        <Button
            android:text="清洗"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:id="@+id/btn_clean"
            android:textColor="@color/amae_text_icons"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:background="@drawable/amae_button" />
    </LinearLayout>

</RelativeLayout>
